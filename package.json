{
	"name": "vectre",
	"version": "1.0.0",
	"description": "Complete implementation of Spectre.css on Vue 2.x",
	"main": "dist/vectre.js",
	"module": "dist/vectre.esm.js",
	"types": "dist/vectre.d.ts",
	"keywords": [ "vue", "spectre", "ui", "css", "framework" ],
	"author": "Vadim Tiukov",
  "license": "MIT",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vectrejs/vectre.git"
  },
	"bugs": {
		"url": "https://github.com/vectrejs/vectre/issues"
	},
	"homepage": "https://github.com/vectrejs/vectre#readme",
	"scripts": {
		"prebuild": "wotan && rm -rf dist/*",
		"build": "NODE_ENV=production ./rollup.js && npm run build-dts && npm run build-cleanup",
		"build-dts": "dts-bundle --name vectre --main dist/main.d.ts --removeSource",
		"build-cleanup": "find ./dist -empty -type d -delete",
		"dev": "./rollup.js --watch"
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"@fimbul/valtyr": "^0.15.0",
		"@fimbul/ve": "^0.15.0",
		"@fimbul/wotan": "^0.15.0",
		"@vue/babel-preset-app": "^3.1.1",
		"chokidar": "^2.0.4",
		"dts-bundle": "^0.7.3",
		"minimist": "^1.2.0",
		"node-sass": "^4.10.0",
		"postcss": "^7.0.5",
		"rollup": "^0.66.6",
		"rollup-plugin-babel": "^4.0.3",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-css-only": "^0.4.0",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-terser": "^3.0.0",
		"rollup-plugin-typescript2": "^0.17.2",
		"rollup-plugin-vue": "^4.3.2",
		"tslint-config-airbnb": "^5.7.0",
		"typescript": "^3.1.6",
		"vue": "^2.5.16",
		"vue-property-decorator": "^7.0.0",
		"vue-template-compiler": "^2.5.16",
		"vue-tsx-helper": "^0.1.3"
	}
}
